<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvReferenceDay"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btDayStart"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/DayStart" />

        <TextView
            android:id="@+id/tvDayStart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Time_Default"
            android:textAlignment="center"
            android:textSize="@dimen/TimeLabel_Size"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btPauseStart"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/PauseStart" />

        <TextView
            android:id="@+id/tvPauseStart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Time_Default"
            android:textAlignment="center"
            android:textSize="@dimen/TimeLabel_SizePause" >
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btPauseEnd"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/PauseEnd" />

        <TextView
            android:id="@+id/tvPauseEnd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Time_Default"
            android:textAlignment="center"
            android:textSize="@dimen/TimeLabel_SizePause" >
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btDayEnd"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/DayEnd" />

        <TextView
            android:id="@+id/tvDayEnd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Time_Default"
            android:textAlignment="center"
            android:textSize="@dimen/TimeLabel_Size"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btShowList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

</LinearLayout>